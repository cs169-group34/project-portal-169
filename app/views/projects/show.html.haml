= "Title: #{@project.title}"
%br
= "From Customer: #{@customer.name}"
%br
= "Customer Email: #{@customer.email}"
%br
= "Student Team Assigned to: #{@student_team.name}"
%br
= "Content: #{@project.content}" 
%br
= "#{@is_assigned_msg}"
%p
=link_to("Edit Project", edit_project_path(@project))
%br

%br
- if @is_instructor
  = form_tag "/projects/#{@project.id}/assign" do
    = label :assign, :student_team, 'Student Team to assign:'
    %br
    = text_field :assign, 'student_team', id: 'assign to student_team'
    %p
    = submit_tag 'Assign', id: 'Assign', data: { disable_with: "Please wait..." }